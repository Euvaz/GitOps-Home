{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch",
    "github>Euvaz/GitOps-Home//.github/renovate/commitMessage.json",
    "github>Euvaz/GitOps-Home//.github/renovate/labels.json",
    "github>Euvaz/GitOps-Home//.github/renovate/semanticCommits.json",
    "helpers:pinGitHubActionDigests"
  ],
  "platform": "github",
  "onboarding": false,
  "requireConfig": "optional",
  "reviewersFromCodeOwners": false,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "ignorePaths": ["**/archive/**"],
  "flux": {
    "fileMatch": ["(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"]
  },
  "helm-values": {
    "fileMatch": ["(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)\\.taskfiles/.+\\.ya?ml(\\.j2)?$",
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  }
}
